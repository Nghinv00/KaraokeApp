<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.karaapp.karaokeapp.ui.fragment.DsYeuThichFragment"
    android:weightSum="10"
    android:layout_marginTop="@dimen/left"
    android:layout_marginLeft="@dimen/left"
    android:layout_marginRight="@dimen/left"
    android:layout_marginStart="@dimen/left"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/imgVideo_love"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="4"
            android:src="@drawable/videotest" />

        <TextView
            android:id="@+id/tvtime"
            android:layout_width="38dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/imgVideo_love"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/left"
            android:background="@drawable/nine_patch_durations"
            android:text="4:18"
            android:textColor="#FFFFFF"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5">
        <TextView
            android:id="@+id/tv_title_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="ĐÊM NGÀY XA EM -KARAOKE NHẠC TRẺ - HÁT KARAOKE ONLINE"
            android:textColor="#81D4FA"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgVideo"
            android:layout_toEndOf="@+id/imgVideo"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/tv_the_loai_love"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KARAOKE NHẠC TRẺ"
            android:textColor="#9E9E9E"
            android:textStyle="italic"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:layout_alignBottom="@+id/imgVideo"
            android:layout_toRightOf="@+id/imgVideo"
            android:layout_marginBottom="14dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_not_love"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_weight="1.00"
        android:background="@drawable/button_options_black"/>

</LinearLayout>
