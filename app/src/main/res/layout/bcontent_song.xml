<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgVideo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/bxhbaihat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="ĐÊM NGÀY XA EM -KARAOKE NHẠC TRẺ - HÁT KARAOKE ONLINE"
        android:textColor="#81D4FA"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgVideo"
        android:layout_toEndOf="@+id/imgVideo"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/minuteShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 phút trước"
        android:textColor="#9E9E9E"
        android:textStyle="italic"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@+id/imgVideo"
        android:layout_toRightOf="@+id/imgVideo"
        android:layout_marginBottom="14dp" />

</RelativeLayout>