<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karaapp.karaokeapp.ui.fragment.TrangCaNhanFaceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/avata_trangcanhan"
                android:layout_width="100dp"
                android:layout_height="100dp">

            </com.facebook.login.widget.ProfilePictureView>

            <ImageView
                android:id="@+id/android"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@null"
                android:src="@drawable/nav_avatar_face" />

        </FrameLayout>

        <TextView
            android:id="@+id/tvuser_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:text="Tên Facebook"
            android:textAppearance="?android:attr/textAppearance" />

        <include layout="@layout/share_like" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CCCCCC"
            android:gravity="center"
            android:padding="15dp"
            android:text="BẢNG THỐNG KẾ"
            android:textColor="#33CC33" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:weightSum="10"
            android:padding="7dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Thu âm"
                android:textColor="#33CC33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Số lượng"
                android:textColor="#33CC33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Like"
                android:textColor="#33CC33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Share"
                android:textColor="#33CC33" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Comment"
                android:textColor="#33CC33" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_thong_ke"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin">

        </ListView>
    </LinearLayout>
</LinearLayout>
