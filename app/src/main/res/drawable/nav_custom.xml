<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#0099FF"
                android:centerColor="#0099FF"
                android:endColor="#0099FF"/>
            <corners android:radius="5dp"/>
            <stroke android:width="2dp" android:color="#0099FF"/>
            <padding android:left="15dp" android:top="5dp"
                android:right="15dp" android:bottom="5dp"/>
        </shape>
    </item>

</selector>